<!-- Edit Item Modal -->
<div class="modal fade" id="editItemModal" tabindex="-1" aria-labelledby="editItemModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editItemModalLabel">Edit Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("EditItem", "Home", FormMethod.Post))
                {
                    <div class="row">
                        <div class="mb-3 col-6">
                            <label for="purchaseOrderNumber" class="form-label">Order Number</label>
                            <input type="text" class="form-control" id="purchaseOrderNumber" name="purchaseOrderNumber" required />
                        </div>
                        <div class="mb-3 col-6">
                            <label for="itemNumber" class="form-label">Item Number</label>
                            <input type="number" class="form-control" id="itemNumber" name="itemNumber" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-6">
                            <label for="itemName" class="form-label">Item Name</label>
                            <input type="text" class="form-control" id="itemName" name="itemName" required />
                        </div>
                        <div class="mb-3 col-6">
                            <label for="itemDescription" class="form-label">Description</label>
                            <input type="text" class="form-control" id="itemDescription" name="itemDescription" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-6">
                            <label for="purchasePrice" class="form-label">Price</label>
                            <input type="number" step="0.01" class="form-control" id="purchasePrice" name="purchasePrice" required />
                        </div>
                        <div class="mb-3 col-6">
                            <label for="purchaseQuantity" class="form-label">Quantity</label>
                            <input type="number" class="form-control" id="purchaseQuantity" name="purchaseQuantity" required />
                        </div>
                    </div>
                    <div class="row">                        
                        <div class="mb-3 col-6">
                            <label for="lastModifiedByUser" class="form-label">Last Modified By</label>
                            <input type="text" class="form-control" id="lastModifiedByUser" name="lastModifiedByUser" required />
                        </div>
                        <div class="mb-3 col-6">
                            <input type="hidden" class="form-control" id="purchaseDetailItemAutoId" name="purchaseDetailItemAutoId" required />
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var $rows = $('#purchaseDetails tbody tr');

        $rows.each((index, row) => {
            row.addEventListener('click', function() {
                $('#editItemModal #purchaseOrderNumber').val(this.dataset.purchaseorder);
                $('#editItemModal #itemNumber').val(this.dataset.itemnumber);
                $('#editItemModal #itemName').val(this.dataset.itemname);
                $('#editItemModal #itemDescription').val(this.dataset.itemdescription);
                $('#editItemModal #purchasePrice').val(this.dataset.purchaseprice);
                $('#editItemModal #purchaseQuantity').val(this.dataset.purchasequantity);
                $('#editItemModal #lastModifiedByUser').val(this.dataset.lastmodifiedbyuser);
                $('#editItemModal #purchaseDetailItemAutoId').val(this.dataset.purchasedetailitemautoid);

                var modal = new bootstrap.Modal(document.getElementById('editItemModal'));
                modal.show();
            });
        });        
    });
</script>
